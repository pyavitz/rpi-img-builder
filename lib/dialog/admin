#!/bin/bash
### DO NOT EDIT
RED="\e[0;31m"
FIN="\e[0m"
VERSION="5.10.y"
BUILD_VERSION="1"
menuconfig="0"
crosscompile="1"
ccache="0"
DISTRO="debian"
DISTRO_VERSION="buster"
ext4="1"
btrfs="0"
xfs="0"
custom_defconfig="0"
MYCONFIG=""

# open fd
exec 3>&1

# Store data to $VALUES variable
VALUES=$(dialog --ok-label "Submit" --no-cancel \
	  --backtitle "Raspberry Pi Image Builder | Administrator" \
	  --title "Config Menu" \
	  --form "Choose:" \
0 36 0 \
	"Linux kernel"	1 1	""	 		1 14 0 0 \
        "Branch:"   	2 1     "$VERSION"        	2 9 7 0 \
        "Build:"   	3 1     "$BUILD_VERSION"        3 8 16 0 \
	"Menuconfig:"	4 1	"$menuconfig"  		4 13 2 0 \
	"Crosscompile:" 5 1	"$crosscompile" 	5 15 2 0 \
	"Caching on:"	6 1	"$ccache"	 	6 13 2 0 \
	""		7 1	""	 		7 14 0 0 \
	"Distribution"	8 1	""	 		8 14 0 0 \
	"Distro:"	9 1	"$DISTRO"	  	9 10 15 0 \
	"Release:"	10 1	"$DISTRO_VERSION"  	10 10 15 0 \
	""		11 1	""	 		11 14 0 0 \
	"Filesystem"	12 1	""	 		12 14 0 0 \
	"ext4:"		13 1	"$ext4"		 	13 8 2 0 \
	"btrfs:"	14 1	"$btrfs"	 	14 8 2 0 \
	"xfs:"		15 1	"$xfs"		 	15 8 2 0 \
	""		16 1	""	 		16 14 0 0 \
	"Customize"	17 1	""	 		17 14 0 0 \
	"Defconfig:"	18 1	"$custom_defconfig" 	18 12 2 0 \
	"Name:"		19 1	"$MYCONFIG"	  	19 7 20 0 \
2>&1 1>&3)

# close fd
exec 3>&-

# convert into vars
echo "$VALUES" > tmp1
echo VERSION='"' >> tmp0
echo BUILD_VERSION='"' >> tmp0
echo menuconfig= >> tmp0
echo crosscompile= >> tmp0
echo ccache= >> tmp0
echo DISTRO='"' >> tmp0
echo DISTRO_VERSION='"' >> tmp0
echo ext4= >> tmp0
echo btrfs= >> tmp0
echo xfs= >> tmp0
echo custom_defconfig= >> tmp0
echo MYCONFIG='"' >> tmp0
echo userscripts=0 >> tmp0
echo verbose=0 >> tmp0
echo admin=1 >> tmp0
echo builder=3.11 >> tmp0
echo '"' >> tmp2
echo '"' >> tmp2
echo >> tmp2
echo >> tmp2
echo >> tmp2
echo '"' >> tmp2
echo '"' >> tmp2
echo >> tmp2
echo >> tmp2
echo >> tmp2
echo >> tmp2
echo _defconfig'"' >> tmp2
paste -d '\0' tmp0 tmp1 tmp2  > userdata.txt
rm -f tmp0 tmp1 tmp2

# categories
sed -i '1i### LINUX KERNEL' userdata.txt
sed -i '7i### DISTRIBUTION' userdata.txt
sed -i '10i### FILESYSTEM' userdata.txt
sed -i '14i### CUSTOM' userdata.txt
sed -i '19i### DO NOT EDIT BELOW THIS LINE' userdata.txt

# clear screen
clear

# userdata
echo -e "${RED}userdata file created${FIN}."
