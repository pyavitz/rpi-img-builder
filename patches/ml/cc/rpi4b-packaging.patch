+	then rm -f /boot/{fixup4*.dat,start4*.elf,LICENCE.broadcom,COPYING.linux};
+fi
+
+if ls /boot/kernel* > /dev/null 2>&1; then rm -f /boot/kernel* /boot/initrd.img*;
+	else echo "Installing new kernel ...";
+fi
+exit 0
+EOT
+        chmod 755 $tmpdir/DEBIAN/preinst
+
