#!/bin/bash
source lib/source.txt
source userdata.txt
mkdir -p ${TMP4}
cd ${TMP4}

### Download kernel
echo
echo Downloading kernel.
wget -cq --show-progress https://github.com/raspberrypi/linux/archive/rpi-${VERSION}.tar.gz
echo Done.

### Extract
echo
echo Extracting archive.
tar -xf rpi-${VERSION}.tar.gz
#rm -f rpi-${VERSION}.tar.gz #remove
echo Done.

### Setup
cd ${KERNEL}-${VERSION}
export ARCH=arm64

### Clean kernel
#make clean
#make mrproper

### Patching
case `grep -Fx "crosscompile=1" "../../userdata.txt" >/dev/null; echo $?` in
  0)
    echo
    echo Applying cc packaging patch.
    patch -p1 < ../${CC}/rpi4b-packaging.patch
    cp -f ../${PAT}/headers-byteshift.patch headers-byteshift.patch
    sed -i 's/export INITRD=$want_initrd/export INITRD=No/g' scripts/package/builddeb
    sed -i 's/export INITRD=$(if_enabled_echo CONFIG_BLK_DEV_INITRD Yes No)/export INITRD=No/g' scripts/package/builddeb
    echo Done.
    echo
    ;;
  1)
    echo
    echo Applying nc packaging patch.
    patch -p1 < ../${NC}/rpi4b-packaging.patch
    sed -i 's/export INITRD=$want_initrd/export INITRD=No/g' scripts/package/builddeb
    sed -i 's/export INITRD=$(if_enabled_echo CONFIG_BLK_DEV_INITRD Yes No)/export INITRD=No/g' scripts/package/builddeb
    echo Done.
    echo
    ;;
  *)
    #
    ;;
esac

### Defconfig
case `grep -Fx "custom_defconfig=1" "../../userdata.txt" >/dev/null; echo $?` in
  0)
    echo Making ${MYCONFIG}.
    cp -f ../${DEF}/${MYCONFIG} arch/arm64/configs/
    make ARCH=arm64 ${MYCONFIG}
    echo Done.
    ;;
  1)
    echo Making foundation defconfig.
    make ARCH=arm64 bcm2711_defconfig &> /dev/null
    echo Done.
    ;;
  *)
    #
    ;;
esac

### Menuconfig
case `grep -Fx "menuconfig=1" "../../userdata.txt" >/dev/null; echo $?` in
  0)
    echo
    echo Opening menuconfig.
    sleep 1s
    make menuconfig
    ;;
  *)
    #
    ;;
esac

### Build deb
case `grep -Fx "crosscompile=1" "../../userdata.txt" >/dev/null; echo $?` in
  0)
    echo -- CC
    echo --- Building deb packages.
    make -j${CORES} ARCH=arm64 CROSS_COMPILE=aarch64-linux-gnu- bindeb-pkg
    ;;
  1)
    echo -- NC
    echo --- Building deb packages.
    make -j${CORES} ARCH=arm64 bindeb-pkg
    ;;
  *)
    #
    ;;
esac
echo Done.
echo
